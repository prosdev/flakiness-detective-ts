{
  "name": "@flakiness-detective/cli",
  "version": "0.1.0",
  "description": "Command-line interface for Flakiness Detective - Detect and analyze flaky tests from the terminal",
  "keywords": [
    "testing",
    "flakiness",
    "test-automation",
    "cli",
    "playwright",
    "command-line"
  ],
  "author": "prosdevlab",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/prosdev/flakiness-detective-ts.git",
    "directory": "packages/cli"
  },
  "homepage": "https://github.com/prosdev/flakiness-detective-ts/tree/main/packages/cli#readme",
  "bugs": {
    "url": "https://github.com/prosdev/flakiness-detective-ts/issues"
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "flakiness-detective": "./dist/index.js"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "clean": "rm -rf dist",
    "typecheck": "tsc --noEmit",
    "lint": "biome lint ./src",
    "format": "biome format --write ./src",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "dependencies": {
    "@flakiness-detective/core": "workspace:*",
    "@flakiness-detective/adapters": "workspace:*",
    "@flakiness-detective/utils": "workspace:*"
  },
  "devDependencies": {
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=22"
  }
}