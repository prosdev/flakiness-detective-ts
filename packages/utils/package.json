{
  "name": "@flakiness-detective/utils",
  "version": "0.1.0",
  "description": "Shared utilities for Flakiness Detective - Logger and common helpers",
  "keywords": [
    "testing",
    "flakiness",
    "test-automation",
    "utilities",
    "logger"
  ],
  "author": "prosdevlab",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/prosdev/flakiness-detective-ts.git",
    "directory": "packages/utils"
  },
  "homepage": "https://github.com/prosdev/flakiness-detective-ts#readme",
  "bugs": {
    "url": "https://github.com/prosdev/flakiness-detective-ts/issues"
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "clean": "rm -rf dist",
    "typecheck": "tsc --noEmit",
    "lint": "biome lint ./src",
    "format": "biome format --write ./src",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "dependencies": {},
  "devDependencies": {
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=22"
  }
}