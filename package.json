{
  "name": "ts-monorepo",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "test": "vitest run",
    "test:watch": "vitest",
    "clean": "turbo clean && rm -rf node_modules",
    "format": "turbo format",
    "typecheck": "turbo typecheck",
    "prepare": "husky",
    "lint-staged": "biome check --apply --no-errors-on-unmatched --files",
    "changeset": "changeset",
    "version": "changeset version",
    "release": "pnpm build && changeset publish"
  },
  "devDependencies": {
    "@biomejs/biome": "1.5.3",
    "@changesets/cli": "^2.27.1",
    "@commitlint/cli": "^18.6.0",
    "@commitlint/config-conventional": "^18.6.0",
    "@tsconfig/node-lts": "^22.0.0",
    "husky": "^9.0.11",
    "turbo": "^1.11.3",
    "typescript": "^5.3.3",
    "vitest": "^1.2.1",
    "@vitest/coverage-v8": "^1.2.1"
  },
  "packageManager": "pnpm@8.15.4",
  "engines": {
    "node": ">=22"
  }
}