{
  "extends": "@tsconfig/node-lts/tsconfig.json",
  "compilerOptions": {
    "composite": true,
    "strict": false,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node16",
    "module": "nodenext",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "lib": ["ES2022", "DOM"],
    "types": ["node"],
    "isolatedModules": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "paths": {
      "@flakiness-detective/core": ["packages/core/dist"],
      "@flakiness-detective/core/*": ["packages/core/dist/*"],
      "@flakiness-detective/utils": ["packages/utils/dist"],
      "@flakiness-detective/utils/*": ["packages/utils/dist/*"],
      "@flakiness-detective/analyzer": ["packages/analyzer/dist"],
      "@flakiness-detective/analyzer/*": ["packages/analyzer/dist/*"],
      "@flakiness-detective/adapters": ["packages/adapters/dist"],
      "@flakiness-detective/adapters/*": ["packages/adapters/dist/*"],
      "@flakiness-detective/visualization": ["packages/visualization/dist"],
      "@flakiness-detective/visualization/*": ["packages/visualization/dist/*"],
      "@flakiness-detective/cli": ["packages/cli/dist"],
      "@flakiness-detective/cli/*": ["packages/cli/dist/*"]
    }
  },
  "exclude": ["node_modules"],
  "files": [],
  "references": [
    { "path": "./packages/utils" },
    { "path": "./packages/core" },
    { "path": "./packages/adapters" },
    { "path": "./packages/analyzer" },
    { "path": "./packages/visualization" },
    { "path": "./packages/cli" }
  ]
}